{
  "include": [
    "lib/index.ts",
    "lib/*.d.ts",
    "../lib/types.d.ts"
  ],
  "compilerOptions": {
    "outDir": "../build/public/lib/",
    "lib": ["es2019", "dom"],
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "types": [
      "jquery",
      "bootstrap",
      "ace",
      "diff"
    ]
  },
  "typeAcquisition": {
    "enable": false
  }
}